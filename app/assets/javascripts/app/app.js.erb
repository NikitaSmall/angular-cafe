var cafe = angular.module('cafe', [
    'tableController',
    'roomMenuController',
    'foodMenuController',
    'TableDirectives',
    'TableServices',
    'ngRoute'
]);

cafe.config(['$routeProvider', function($routeProvider) {
        $routeProvider.
            when('/menu', {
                    templateUrl: '<%= asset_path('foodMenu.html') %>',
                    controller: 'foodMenuCtrl'
                }).
            when('/rooms', {
                templateUrl: '<%= asset_path('roomsMenu.html') %>',
                controller: 'roomMenuCtrl'
            }).
            when('/tables/:id', {
                templateUrl: '<%= asset_path('tablesSetter.html') %>',
                controller: 'setTableCtrl'
            }).
            otherwise({
                redirectTo: '/rooms'
            });
    }]);