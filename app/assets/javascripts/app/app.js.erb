var cafe = angular.module('cafe', [
    'tableController',
    'roomMenuController',
    'foodMenuController',
    'optionsMenuController',
    'ordersMenuController',
    'orderController',
    'TableDirectives',
    'TableServices',
    'tableFilters',
    'ngRoute',
    'sticky'
]);

cafe.config(['$routeProvider', function($routeProvider) {
        $routeProvider.
            when('/orders', {
                    templateUrl: '<%= asset_path('ordersMenu.html') %>',
                    controller: 'ordersMenuCtrl'
                }).
            when('/orders/:id', {
                    templateUrl: '<%= asset_path('order.html') %>',
                    controller: 'orderCtrl'
                }).
            when('/menu', {
                    templateUrl: '<%= asset_path('foodMenu.html') %>',
                    controller: 'foodMenuCtrl'
                }).
            when('/rooms', {
                templateUrl: '<%= asset_path('roomsMenu.html') %>',
                controller: 'roomMenuCtrl'
            }).
            when('/tables/:id', {
                templateUrl: '<%= asset_path('tablesSetter.html') %>',
                controller: 'setTableCtrl'
            }).
            when('/options', {
                templateUrl: '<%= asset_path('optionsMenu.html') %>',
                controller: 'optionsMenuCtrl'
            }).
            otherwise({
                redirectTo: '/rooms'
            });
    }]);